{
	// ============================================================================
	// OPTION 1 (ACTIVE): Format on save avec l'extension Biome
	// ============================================================================
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "biomejs.biome",
	"editor.codeActionsOnSave": {
		"quickfix.biome": "explicit",
		"source.organizeImports.biome": "explicit"
	},
	
	// Config Biome extension
	"biome.enabled": true,
	"biome.lspBin": "./node_modules/@biomejs/biome/bin/biome",
	"biome.rename": true,
	
	// Par type de fichier
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "biomejs.biome"
	}

	// ============================================================================
	// OPTION 2 (FALLBACK): Si Biome crashe, d√©commente ci-dessous et commente au-dessus
	// Installe l'extension "Run on Save" (emeraldwalk.runonsave)
